<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#00A300">
        <View
            android:id="@+id/View"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google Play"
            android:textSize="22dp"
            android:textColor="#C4C4C4"
            android:layout_marginTop="30dp"
            android:layout_marginStart="80dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_menu_24"
            android:layout_marginTop="33dp"
            android:layout_marginStart="24dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_mic_24"
            android:layout_marginTop="33dp"
            android:layout_marginStart="330dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AAPS &amp; GAMES"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="93dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOVIES, MUSIC, BOOKS"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="93dp"/>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_1"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <HorizontalScrollView
                android:id="@+id/horiScrollView"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:textColor="@color/white"
                        android:background="#00A300"
                        android:layout_marginStart="10dp"
                        android:text="TOP GAMES"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:background="#00A300"
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:text="Top CHARTS"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:background="#00A300"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:text="CATEGORIES"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:background="#00A300"
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:text="FAMILY"/>


                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommended for you"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:textSize="18dp"
                  android:text="More"
                  android:textColor="#00A300"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="100dp"/>
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerView_2"/>

        </LinearLayout>




    </ScrollView>


</LinearLayout>
